{% extends 'layout.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>
                {{ user.roles ? user.roles|json_encode|replace({'ROLE_':'',',':', ','[':'',']':'','"':''})|title:'' }}
            </td>
        </tr>
        <tr>
            <th>IsVerified</th>
            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profile_edit', {'id': user.id}) }}"><button class="btn-success">Edit</button></a>

{% endblock %}
