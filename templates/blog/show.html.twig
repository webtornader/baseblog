{% extends 'layout.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            {%  if blog.blogCategory  %}
                <tr>
                    <th>Category</th>
                    <td>
                        {%  if blog.blogCategory.title %}
                            {{ blog.blogCategory.title}}
                        {%  else %}
                            {{ blog.blogCategory.name | lower | capitalize}}
                        {%  endif %}
                    </td>
                </tr>
            {%  endif %}
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
        </tbody>
    </table>
    {% if app.user %}
        <a href="{{ path('app_blog_list') }}">back to list</a>

        <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>

        {{ include('blog/_delete_form.html.twig') }}
    {% else %}
        <a href="{{ path('app_blog_index') }}">Назад к списку</a>
    {% endif %}
{% endblock %}
